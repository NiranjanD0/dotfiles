#!/bin/sh

# Send the notification
notify-send "âš¡ AC Mode On" "Laptop plugged in, full juice mode activated"

# Kill the static wallpaper spirit
pkill swww || true

# Set refresh rate to max (e.g., 144Hz)
hyprctl keyword monitor eDP-2,1920x1080@144,auto,1

# Start the live wallpaper spirit
pkill mpvpaper || true
mpvpaper -o "loop no-audio" ALL /home/rio/dotfiles/wallpaper/live.mp4 &
